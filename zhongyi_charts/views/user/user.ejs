<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../layout/head.ejs")%>

</head>
<body>
<%- include("../layout/nav.ejs")%>
<div class="container">

<div class="row">
    <div class="col-md-2" role="complementary">
        <%- include("../layout/user_left_nav.ejs")%>
    </div>
    <div class="col-md-10" role="main">
        <!--图表-->
        <div id="container02" style="min-width:700px;height:400px"></div>
    </div>

</div>

<div id="sliders" style="min-width:310px;max-width: 800px;margin: 0 auto;"></div>
<script type="text/javascript">
    $(function () {
        // Set up the chart
        var chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container02',
                type: 'column',
                margin: 75,
                options3d: {
                    enabled: true,
                    alpha: 0,
                    beta: 15,
                    depth: 50,
                    viewDistance: 25
                }
            },
            title: {
                text: '物色近30天注册用户'
            },
            subtitle:{
                text:'总用户数:'+<%=count%>
            },
            plotOptions: {
                column: {
                    depth: 25
                }
            },
            xAxis: {
                categories: <%- data_title%>
            },
            series: [{
                "name": "注册数",
                data: <%= data_value%>,
                stack: 'male'
            }]
        });

        // Activate the sliders
        $('#R0').on('change', function () {
            chart.options.chart.options3d.alpha = this.value;
            showValues();
            chart.redraw(false);
        });

        $('#R1').on('change', function () {
            chart.options.chart.options3d.beta = this.value;
            showValues();
            chart.redraw(false);
        });

        function showValues() {
            $('#R0-value').html(chart.options.chart.options3d.alpha);
            $('#R1-value').html(chart.options.chart.options3d.beta);
        }

        showValues();
    });
</script>
</div>
<%- include("../layout/footer.ejs")%>

</body>
</html>
