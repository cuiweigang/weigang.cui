<!DOCTYPE html>
<html>
<head>
    <%- include("../layout/head.ejs") %>
</head>
<body>
<%- include("../layout/nav.ejs") %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2" role="complementary">
            <%- include("../layout/order_left_nav.ejs") %>
        </div>
        <div class="col-md-10" role="main">
            <h5>有效订单详情</h5>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>订单号</th>
                    <th>下单时间</th>
                    <th>买家用户ID</th>
                    <th>收货人</th>
                    <th>收货地址</th>
                    <th>联系人</th>
                    <th>订单总价</th>
                    <th>状态</th>
                    <th>店铺ID</th>
                    <th>收益</th>
                </tr>
                </thead>
                <tbody>

                <% for (var i = 0; i < data.length; i++){
                    var row = data[i];
                %>
                <tr>
                    <td><%= i %></td>
                    <td><%= row.order_id %></td>
                    <td><%= row.order_date %></td>
                    <td><%= row.user_id %></td>
                    <td><%= row.delivery_name %></td>
                    <td><%= row.delivery_address %></td>
                    <td><%= row.delivery_phone %></td>
                    <td><%= row.price %></td>
                    <td><%= row.status %></td>
                    <td><%= row.shop_id %></td>
                    <td><%= row.income %></td>
                    <td>
                        <a class="btn" data-toggle="collapse" href="#pro_<%= i %>" aria-expanded="false" aria-controls="collapseExample">
                            more
                        </a>
                    </td>

                </tr>
                <tr style="border: 0px;">
                    <td colspan="12">
                        <div class="collapse" id="pro_<%= i %>">

                                <table class="table table-bordered table-condensed">
                                    <thead>
                                    <tr>
                                        <th>商品名称</th>
                                        <td>购买数量</td>
                                        <td>商品款ID</td>
                                        <td>sku ID</td>
                                        <td>单价</td>
                                        <td>供应商ID</td>
                                        <td>供应商</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td><%= row.product_name %></td>
                                        <td><%= row.product_count %></td>
                                        <td><%= row.product_id %></td>
                                        <td><%= row.sku_id %></td>
                                        <td><%= row.product_price %></td>
                                        <td><%= row.id %></td>
                                        <td><%= row.name %></td>
                                    </tr>
                                    </tbody>
                                </table>

                        </div>
                    </td>
                </tr>
                <%
                }
                %>

                </tbody>
            </table>
            </table>
        </div>
    </div>
</div>
</div>
<%- include("../layout/footer.ejs") %>

</body>
</html>
